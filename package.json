    "predeploy": "tsc scripts/deploy-hook.ts",
    "deploy": "node scripts/deploy-hook.js",
    "trigger": "node scripts/trigger-hook.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XRPL-Hackathon-2021/hooks-liquidity-pool.git"
